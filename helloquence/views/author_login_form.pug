extends layout

block content
  h1(class="title")=title

  form(method='POST' action='')
    div.form-group    
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='Email' name='email' required='true' value=(undefined===email ? '' : author.email) )
      label(for='password') Password:
      input#password.form-control(type='text' placeholder='Password' name='password' required='true' value=(undefined===password ? '' : author.password))
    
    button.btn.btn-primary(type='submit') Log In

  if errors
    ul
      for error in errors
        li!= error.msg